<p id="notice"><%= notice %></p>

<h1>User Lessons</h1>

<table>
  <thead>
    <tr>
      <th>Score</th>
      <th>User</th>
      <th>Lesson</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_lessons.each do |user_lesson| %>
      <tr>
        <td><%= user_lesson.score %></td>
        <td><%= user_lesson.user.name %></td>
        <td><%= user_lesson.lesson.name %></td>
        <td><%= link_to 'Show', user_lesson %></td>
        <td><%= link_to 'Edit', edit_user_lesson_path(user_lesson) %></td>
        <td><%= link_to 'Destroy', user_lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

